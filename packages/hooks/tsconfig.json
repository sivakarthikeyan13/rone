{
  "include": ["./src"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/lib",
    "sourceMap": true,
    "types": ["node"],
    "target": "es5",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true
  }
}
