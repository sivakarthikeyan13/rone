{
  "name": "rone-project",
  "version": "1.0.0",
  "description": "Rone Project Monorepo",
  "private": true,
  "engines": {
    "node": ">=20.9.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "main": "index.ts",
  "scripts": {
    "build": "npm run build --workspaces",
    "type-check": "tsc --noEmit",
    "test": "echo \"Running tests...\" && exit 0",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "prepare": "husky"
  },
  "author": "Sivakarthikeyan",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "release-it": "^19.2.3",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier  --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
